<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_ffffff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@id/imageView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/home_back" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/_ffffff"
                android:gravity="center"
                android:text="十二星座配对爱情缘分和配对指数，提前知晓！"
                android:textColor="@color/_333333"
                android:textSize="@dimen/rw_text_size_14" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rw_spacing_size_12"
                android:layout_marginRight="@dimen/rw_spacing_size_12"
                android:layout_marginTop="@dimen/rw_spacing_size_12"
                android:background="@drawable/home_line_yuan"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/rw_spacing_size_33"
                    android:layout_marginLeft="@dimen/rw_spacing_size_12"
                    android:gravity="center_vertical"
                    android:text="请选择双方星座"
                    android:textColor="@color/_333333"
                    android:textSize="@dimen/rw_text_size_14" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="@color/_bcf1f6" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/rw_spacing_size_36"
                    android:layout_marginLeft="@dimen/rw_spacing_size_12"
                    android:layout_marginRight="@dimen/rw_spacing_size_12"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/nv_back" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/rw_spacing_size_12"
                        android:text="女生星座："
                        android:textColor="@color/_333333"
                        android:textSize="@dimen/rw_text_size_13" />

                    <TextView
                        android:id="@id/home_nv_tv"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/rw_text_size_15"
                        android:layout_weight="13.0"
                        android:gravity="center_vertical"
                        android:hint="白羊座 3.21-4.19"
                        android:textColor="@color/_333333"
                        android:textColorHint="@color/_bfbfbf"
                        android:textSize="@dimen/rw_text_size_14" />

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/rw_spacing_size_25"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/home_return_back" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:layout_marginLeft="@dimen/rw_spacing_size_12"
                    android:background="@color/_bcf1f6" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/rw_spacing_size_36"
                    android:layout_marginLeft="@dimen/rw_spacing_size_12"
                    android:layout_marginRight="@dimen/rw_spacing_size_12"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/nan_back" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/rw_spacing_size_12"
                        android:text="男生星座："
                        android:textColor="@color/_333333"
                        android:textSize="@dimen/rw_text_size_13" />

                    <TextView
                        android:id="@id/home_nan_tv"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/rw_text_size_15"
                        android:layout_weight="13.0"
                        android:gravity="center_vertical"
                        android:hint="白羊座 3.21-4.19"
                        android:textColor="@color/_333333"
                        android:textColorHint="@color/_bfbfbf"
                        android:textSize="@dimen/rw_text_size_14" />

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/rw_spacing_size_25"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/home_return_back" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@id/home_set_btn"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/rw_spacing_size_40"
                android:layout_marginLeft="@dimen/rw_spacing_size_12"
                android:layout_marginRight="@dimen/rw_spacing_size_12"
                android:layout_marginTop="@dimen/rw_spacing_size_20"
                android:background="@drawable/home_set"
                android:text="查看结果"
                android:textColor="@color/_ffffff"
                android:textSize="@dimen/rw_spacing_size_12" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>