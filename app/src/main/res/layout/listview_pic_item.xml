<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/_ffffff"
        android:padding="@dimen/rw_spacing_size_10">

        <ImageView
            android:id="@id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/suo" />

        <TextView
            android:id="@id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rw_spacing_size_10"
            android:layout_marginRight="@dimen/rw_spacing_size_10"
            android:layout_marginTop="@dimen/rw_spacing_size_5"
            android:layout_toRightOf="@id/iv"
            android:text="********请点击查看********"
            android:textColor="@color/_333333"
            android:textSize="@dimen/rw_text_size_16" />

        <TextView
            android:id="@id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginBottom="@dimen/rw_spacing_size_10"
            android:layout_marginLeft="@dimen/rw_spacing_size_10"
            android:layout_marginRight="@dimen/rw_spacing_size_10"
            android:layout_marginTop="@dimen/rw_spacing_size_5"
            android:layout_toRightOf="@id/iv"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="*******************"
            android:textColor="@color/_595959"
            android:textSize="@dimen/rw_text_size_13" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="@color/_e0e0e0" />
</LinearLayout>