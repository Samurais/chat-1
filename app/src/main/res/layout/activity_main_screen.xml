                        android:textColor="@color/_4d4d4d" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/_ebebeb" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/rw_spacing_size_103"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@id/ll_wx_tx"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/jietu_wechat_tx" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/rw_spacing_size_10"
                        android:text="微信提现"
                        android:textColor="@color/_4d4d4d" />
                </LinearLayout>

                <View
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:background="@color/_ebebeb" />

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/jietu_wechat_zz" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/rw_spacing_size_10"
                        android:text="微信转账"
                        android:textColor="@color/_4d4d4d" />
