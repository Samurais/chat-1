<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffefeff4"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/rw_spacing_size_17"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/lq_back_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/lq_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rw_spacing_size_28"
                android:text="零钱"
                android:textColor="#ff000000"
                android:textSize="@dimen/rw_text_size_17" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rw_spacing_size_28"
                android:gravity="right"
                android:text="零钱明细"
                android:textColor="#ff000000"
                android:textSize="@dimen/rw_text_size_17" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rw_spacing_size_46"
        android:background="@mipmap/mylq" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rw_spacing_size_14"
        android:gravity="center"
        android:text="我的零钱"
        android:textColor="#ff000000"
        android:textSize="@dimen/rw_text_size_18" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rw_spacing_size_17"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="#ff000000"
            android:textSize="@dimen/rw_text_size_30" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:hint="11"
            android:textColor="#ff000000"
            android:textColorHint="#ff000000"
            android:textSize="@dimen/rw_text_size_30" />
    </LinearLayout>

    <Button
        android:id="@id/set_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/rw_spacing_size_48"
        android:layout_marginLeft="@dimen/rw_spacing_size_14"
        android:layout_marginRight="@dimen/rw_spacing_size_14"
        android:layout_marginTop="@dimen/rw_spacing_size_35"
        android:background="@drawable/weixin_set"
        android:text="充值"
        android:textColor="#ffffffff"
        android:textSize="@dimen/rw_text_size_17" />

    <Button
        android:id="@id/set2_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/rw_spacing_size_48"
        android:layout_margin="@dimen/rw_text_size_14"
        android:background="@drawable/weixin_setwhite"
        android:text="提现"
        android:textColor="#ff000000"
        android:textSize="@dimen/rw_text_size_17" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rw_spacing_size_4"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/lq_zuanshi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="零钱理财，让零钱安稳赚收益"
            android:textColor="#ff28519f"
            android:textSize="@dimen/rw_text_size_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@id/wenti"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="常见问题"
            android:textColor="#ff28519f"
            android:textSize="@dimen/rw_text_size_12" />

        <TextView
            android:id="@id/weixin_tigong_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/rw_spacing_size_10"
            android:gravity="center"
            android:text="本服务由财付通提供"
            android:textColor="#ffa3a3a2" />
    </LinearLayout>
</LinearLayout>